{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-app-write",
    "fs:allow-desktop-read-recursive",
    "fs:allow-desktop-write",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$DeskTop/*" }]
    }
  ]
}
